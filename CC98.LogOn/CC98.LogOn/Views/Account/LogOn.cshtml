@using Sakura.AspNetCore.Localization

@inject IDynamicViewLocalizer ViewLocalizer

@model CC98.LogOn.ViewModels.Account.LogOnViewModel
@{
	ViewBag.Title = ViewLocalizer.Html.PageTitle;

	var timeList = new List<SelectListItem>
	{
		new SelectListItem {Text = ViewLocalizer.Text.TimeNotSaved, Value = string.Empty, Selected = true},
		new SelectListItem {Text = ViewLocalizer.Text.TimeOneHour, Value = TimeSpan.FromHours(1).ToString("g", CultureInfo.InvariantCulture)},
		new SelectListItem {Text = ViewLocalizer.Text.TimeOneDay, Value = TimeSpan.FromDays(1).ToString("g", CultureInfo.InvariantCulture)},
		new SelectListItem {Text = ViewLocalizer.Text.TimeOneWeek, Value = TimeSpan.FromDays(7).ToString("g", CultureInfo.InvariantCulture)},
		new SelectListItem {Text = ViewLocalizer.Text.TimeOneMonth, Value = TimeSpan.FromDays(30).ToString("g", CultureInfo.InvariantCulture)},
		new SelectListItem {Text = ViewLocalizer.Text.TimeOneYear, Value = TimeSpan.FromDays(365).ToString("g", CultureInfo.InvariantCulture)}
	};
}

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<form asp-controller="Account" asp-action="LogOn" method="post" asp-antiforgery="true" asp-route-returnUrl="@ViewBag.ReturnUrl">
			<div class="form-group">
				<label asp-for="UserName" class="control-label"></label>
				<input type="text" asp-for="UserName" class="form-control" />
				<span asp-validation-for="UserName" class="text-danger"></span>
				<p class="help-block">@ViewLocalizer.Html.UserNameHelp</p>
			</div>
			<div class="form-group">
				<label asp-for="Password" class="control-label"></label>
				<input type="password" asp-for="Password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
				<p class="help-block">@ViewLocalizer.Html.PasswordHelp</p>
			</div>

			<div class="form-group">
				<label asp-for="ValidTime" class="control-label"></label>
				<select asp-for="ValidTime" asp-items="@timeList" class="form-control"></select>
				<span asp-validation-for="ValidTime" class="text-danger"></span>
				<p class="help-block">@ViewLocalizer.Html.ValidTimeHelp</p>
			</div>

			<hr />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<button type="submit" class="btn btn-primary">@ViewLocalizer.Html.LogOnButtonText</button>
			<button type="reset" class="btn btn-default">@ViewLocalizer.Html.ResetButtonText</button>
		</form>

	</div>
</div>

