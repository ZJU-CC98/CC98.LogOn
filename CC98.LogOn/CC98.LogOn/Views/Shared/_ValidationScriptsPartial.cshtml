<environment names="Development">
	<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
	<script src="~/lib/i18next/i18next.js"></script>
	<script src="~/lib/i18next-xhr-backend/i18nextXHRBackend.js"></script>
	<script src="~/lib/i18next-browser-languagedetector/i18nextBrowserLanguageDetector.js"></script>
	<script src="~/lib/pwstrength-bootstrap/dist/pwstrength-bootstrap.js"></script>
</environment>
<environment names="Staging,Production">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"
			integrity="sha256-F6h55Qw6sweK+t7SiOJX+2bpSAa3b/fnlrVCJvmEj1A="
			crossorigin="anonymous"
			asp-fallback-src="~/lib/jquery-validation/dist/jquery.validate.min.js"
			asp-fallback-test="window.jQuery && window.jQuery.validator"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"
			integrity="sha256-zkVFxDCBA0K+Fl6QZDRpD0G+GQ+TfuGv7xXkIAM69h8="
			crossorigin="anonymous"
			asp-fallback-src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"
			asp-fallback-test="window.jQuery && window.jQuery.validator && window.jQuery.validator.unobtrusive"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/i18next/11.9.0/i18next.min.js" 
	        integrity="sha256-Af8IQbPklteOYvPsVcZzKD6aiVIFAXmPZ2ubZIjApr8=" 
	        crossorigin="anonymous"
			asp-fallback-src="~/lib/i18next/i18next.min.js"
			asp-fallback-test="window.i18next"></script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/i18next-xhr-backend/1.5.1/i18nextXHRBackend.min.js"
	        integrity="sha256-DK68Yy4nZYgTxSPtC4VNE5RlHI7d1ve6YET+inmksmw="
	        crossorigin="anonymous"
			asp-fallback-src="~/lib/i18next/i18next.min.js"
			asp-fallback-test="window.i18nextXHRBackend"></script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/i18next-browser-languagedetector/2.2.3/i18nextBrowserLanguageDetector.min.js"
	        integrity="sha256-blwVoTCe1ahsZXaM6slP8WCQxn5BCIYhmsJCre0KUbc="
	        crossorigin="anonymous"
			asp-fallback-src="~/lib/i18next-browser-languagedetector/i18nextBrowserLanguageDetector.min.js"
			asp-fallback-test="window.i18nextBrowserLanguageDetector"></script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/pwstrength-bootstrap/3.0.1/pwstrength-bootstrap.min.js" 
	        integrity="sha256-9NuGcW+0Sc4x615wpiev0h35Sg37EDE+pIqa9LeC+YY=" 
	        crossorigin="anonymous"
			asp-fallback-src="~/lib/pwstrength-bootstrap/dist/pwstrength-bootstrap.min.js"></script>
</environment>


<script>
	i18next
		.use(i18nextBrowserLanguageDetector)
		.use(i18nextXHRBackend)
		.init({
			backend: {
				loadPath: '/lib/pwstrength-bootstrap/locales/{{lng}}.json'
			}
		});
</script>