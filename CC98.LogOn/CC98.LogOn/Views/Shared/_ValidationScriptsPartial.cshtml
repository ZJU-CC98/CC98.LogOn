<environment names="Development">
	<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
	<script src="~/lib/i18next/i18next.js"></script>
	<script src="~/lib/i18next-xhr-backend/i18nextXHRBackend.js"></script>
	<script src="~/lib/i18next-browser-languagedetector/i18nextBrowserLanguageDetector.js"></script>
	<script src="~/lib/pwstrength-bootstrap/dist/pwstrength-bootstrap.js"></script>
</environment>
<environment names="Staging,Production">
	<script src="https://cdn.bootcss.com/jquery-validate/1.17.0/jquery.validate.min.js"
	        asp-fallback-src="~/lib/jquery-validation/dist/jquery.validate.min.js"
	        asp-fallback-test="window.jQuery && window.jQuery.validator"
	        crossorigin="anonymous"
	        integrity="sha384-rZfj/ogBloos6wzLGpPkkOr/gpkBNLZ6b6yLy4o+ok+t/SAKlL5mvXLr0OXNi1Hp"></script>
	<script src="https://cdn.bootcss.com/jquery-validation-unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"
	        asp-fallback-src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"
	        asp-fallback-test="window.jQuery && window.jQuery.validator && window.jQuery.validator.unobtrusive"
	        crossorigin="anonymous"
	        integrity="sha384-JrXK+k53HACyavUKOsL+NkmSesD2P+73eDMrbTtTk0h4RmOF8hF8apPlkp26JlyH"></script>
	<script src="https://cdn.bootcss.com/i18next/10.0.7/i18next.min.js"
	        asp-fallback-src="~/lib/i18next/i18next.min.js"
	        asp-fallback-test="window.i18next"
	        integrity="sha384-oiTLKEsa+VU4D8F6Rtarq8SLM9UU3Z0nZHAmSTv3PO2D1RxOwus5XmIoYGYKaS7o"
	        crossorigin="anonymous"></script>

	<script src="https://cdn.bootcss.com/i18next-xhr-backend/1.5.0/i18nextXHRBackend.min.js"
	        asp-fallback-src="~/lib/i18next/i18next.min.js"
	        asp-fallback-test="window.i18nextXHRBackend"
	        integrity="sha384-eIzvLKdw99yjINvPvMYQiQFD9tYnU9PxIt4DH/P+2biGfs2OyHLgkGsjGIUIg/Ph"
	        crossorigin="anonymous"></script>

	<script src="https://cdn.bootcss.com/i18next-browser-languagedetector/2.1.0/i18nextBrowserLanguageDetector.min.js"
	        asp-fallback-src="~/lib/i18next-browser-languagedetector/i18nextBrowserLanguageDetector.min.js"
	        asp-fallback-test="window.i18nextBrowserLanguageDetector"
	        integrity="sha384-fFh5R5gJH9jhvh2YwWCPP/HpdJFvK0yipuELbd6i/tHZ63YHw+RNPje+7PN7akB2"
	        crossorigin="anonymous"></script>

	<script src="https://cdn.bootcss.com/pwstrength-bootstrap/2.1.1/pwstrength-bootstrap.min.js"
	        asp-fallback-src="~/lib/pwstrength-bootstrap/dist/pwstrength-bootstrap.min.js"
	        integrity="sha384-SdQ8iFnS7oVtjXnj+nN4N/cWJ+DYxvHZN3ABzl+9my5UyoYPqal/DZ++N7ifgWrO"
	        crossorigin="anonymous"></script>
</environment>


<script>
	i18next
		.use(i18nextBrowserLanguageDetector)
		.use(i18nextXHRBackend)
		.init({
			backend: {
				loadPath: '/lib/pwstrength-bootstrap/locales/{{lng}}.json'
			}
		});
</script>