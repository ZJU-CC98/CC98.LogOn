@model IPagedList<AppApiResource>
@{
	ViewBag.Title = "API 资源一览";
}

<div class="alert alert-info">API 资源是客户端可以向用户请求的一种特殊权限，请求方法和领域相同。用户必须同意对 API 资源的授权，提供该资源的服务器才能确定用户的身份信息。API 资源不由 CC98 登录系统直接使用，要了解这些资源的详细情况，请联系相关资源的提供方。</div>

<authorize policy="@Policies.OperateApps">
	<hr />
	<a class="btn btn-primary" asp-controller="ApiResource" asp-action="Create">创建 API 资源</a>
</authorize>

<hr />

@if (Model.Any())
{
	<table class="table table-striped">
		<thead>
			<tr>
				<th>标识</th>
				<th>名称</th>
				<th>描述</th>
				<th asp-authorize-policy="@Policies.OperateApps">操作</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<th>@item.Id</th>
					<td>@item.DisplayName</td>
					<td>@item.Description</td>
					<td asp-authorize-policy="@Policies.OperateApps">
						<div class="btn-group btn-group-sm">
							<a class="btn btn-secondary" asp-controller="ApiResource" asp-action="Edit" asp-route-id="@item.Id">编辑</a>
							<button type="button" class="btn btn-danger">删除</button>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>

	<pager />
}
else
{
	<p class="text-center text-muted">目前没有可用的 API 资源</p>
}