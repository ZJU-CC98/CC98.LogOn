@model Sakura.AspNetCore.IPagedList<CC98.LogOn.Data.App>

@if (Model.Any())
{
	<table class="table table-striped">
		<thead>
			<tr>
				<th>名称</th>
				<th>状态</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<th><a asp-controller="App" asp-action="Detail" asp-route-id="@item.Id">@item.DisplayName</a></th>
					<td>
						@if (item.IsEnabled)
						{
							<strong class="text-success">已启用</strong>
						}
						else
						{
							<strong class="text-danger">已禁用</strong>
						}
					</td>
				</tr>
			}


		</tbody>
	</table>
}
else
{
	<p class="text-center text-muted">目前没有可以显示的应用。</p>
}